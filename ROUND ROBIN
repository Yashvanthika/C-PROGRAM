#include <stdio.h>

struct Process { 
    int at, bt, wt, tat, rem; 
};

int main() {
    int n, q, time = 0, completed = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    struct Process p[n];

    for (int i = 0; i < n; i++) {
        printf("Process %d - AT, BT: ", i + 1);
        scanf("%d %d", &p[i].at, &p[i].bt);
        p[i].rem = p[i].bt;
    }

    printf("Enter Time Quantum: ");
    scanf("%d", &q);

    while (completed < n) {
        for (int i = 0; i < n; i++) {
            if (p[i].rem > 0 && p[i].at <= time) {
                if (p[i].rem > q) {
                    time += q;
                    p[i].rem -= q;
                } else {
                    time += p[i].rem;
                    p[i].tat = time - p[i].at;
                    p[i].wt = p[i].tat - p[i].bt;
                    p[i].rem = 0;
                    completed++;
                }
            }
        }
    }

    printf("\nAT\tBT\tWT\tTAT\n");
    for (int i = 0; i < n; i++)
        printf("%d\t%d\t%d\t%d\n", p[i].at, p[i].bt, p[i].wt, p[i].tat);

    return 0;
}
